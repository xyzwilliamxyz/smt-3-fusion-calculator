<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_odd"
    android:paddingVertical="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ingredient_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredientTwoRace"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            style="@style/DefaultTextViewStyle"
            tools:text="Fairy" />

        <TextView
            android:id="@+id/ingredientTwoLevel"
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="wrap_content"
            style="@style/DefaultTextViewStyle"
            tools:text="7" />

        <TextView
            android:id="@+id/ingredientTwoName"
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            style="@style/DefaultTextViewStyle"
            tools:text="Jack Frost" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HeaderTextViewStyle"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:text="@string/equals_sign" />

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultRace"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            style="@style/DefaultTextViewStyle"
            tools:text="Fairy" />

        <TextView
            android:id="@+id/resultLevel"
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="wrap_content"
            style="@style/DefaultTextViewStyle"
            tools:text="7" />

        <TextView
            android:id="@+id/resultName"
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            style="@style/DefaultTextViewStyle"
            tools:text="Jack Frost" />

    </LinearLayout>
</LinearLayout>